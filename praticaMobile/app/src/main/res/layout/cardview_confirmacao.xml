<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:layout_margin="20dp"
    android:padding="20dp"
    >
        <TextView
            android:id="@+id/textViewConfirmacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Deseja indicar o tÃ©rmino do atendimento?"
            android:textSize="24sp"
            />

        <Button
            android:id="@+id/btnCancelarRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewConfirmacao"
            android:layout_marginTop="48dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#DF3737"
            android:text="CANCELAR"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnConfirmarRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewConfirmacao"
            android:layout_marginTop="48dp"
            android:backgroundTint="#4EDA4E"
            android:text="CONFIRMAR"
            android:textStyle="bold" />


</RelativeLayout>